<% @todo.each do |todo| %>
  <h2><%= todo.name %></h2>
  <p><%= todo.description %></p>
  <br></br>
  <%= link_to "Show", todo_path(todo.id) %>
  <%= link_to "New", new_todo_path(todo.id) %>
  <%= link_to "Edit", edit_todo_path(todo.id) %>
  <%= link_to "Delete", todo_path(todo.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>



